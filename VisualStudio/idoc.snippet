  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>
        Inherit Documentation Comment
      </Title>     
 
      <Description>
        Adds /// <inheritdoc />
      </Description>
 
      <Shortcut>
        idoc
      </Shortcut>
    </Header>
 
    <Snippet>
      <Code Language="CSharp">
        <![CDATA[/// <inheritdoc />]]>
      </Code>
    </Snippet>
  </CodeSnippet>
