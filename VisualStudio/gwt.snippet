        </Literal>
      </Declarations>
      <Code Language="CSharp">
        <![CDATA[[TestMethod]
        public async Task $Method$_$Case$()
        {
            // given
            var sut = CreateSut();
 
            // when
 
 
            // then
 
        }]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>